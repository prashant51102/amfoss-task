void print (int);

int main () {
   int rows;
   cin>>rows;
   print(rows);
   return 0;
}

void print (int r) {
    int siz=r;
    string arr[r];
    for(int i=0;i<siz;i++)
    {
     cout<<"\n";         
    {
        for(int j=0;j<siz;j++)
      {if((j==(siz-1)/2)||((i+j)==(siz-1)/2)||(i==(siz-1)/2)||(j==i+(siz-1)/2))
       cout<<"D";
       else 
       cout<<"*";
      }
    }   
        
        
    }
    
}
